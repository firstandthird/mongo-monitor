{
  "name": "mongo-monitor",
  "version": "1.0.0",
  "description": "Monitors mongodb databases",
  "main": "bin.js",
  "bin": {
    "mongo-monitor": "./bin.js"
  },
  "scripts": {
    "start": "node bin.js",
    "lint": "eslint .",
    "dev": "npm install && npm prune && nodemon bin.js --mongo mongodb://mongo:27017 --databases test test2 --interval 5 --set-profiling true"
  },
  "author": "First+Third",
  "license": "MIT",
  "dependencies": {
    "logr-all": "^1.3.1",
    "mongodb": "^3.1.10",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-config-firstandthird": "^4.3.0",
    "eslint-plugin-import": "^2.14.0",
    "nodemon": "^1.18.7",
    "tap": "^12.1.0"
  },
  "eslintConfig": {
    "extends": "firstandthird",
    "rules": {
      "strict": 0
    }
  }
}
